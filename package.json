{
  "name": "static_site_template",
  "version": "1.1.0",
  "license": "MIT",
  "main": "main.ts",
  "scripts": {
    "dev": "webpack serve",
    "start": "yarn build && sh -c 'cd ./dist && npx reload -b'",
    "build": "yarn lint && NODE_ENV=production webpack",
    "clean": "rm -rf ./node_modules/.cache",
    "fix": "run-s fix:eslint fix:style fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "fix:style": "yarn lint:style --fix",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "lint:style": "stylelint **/*.scss"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^9.0.0",
    "css-loader": "^5.0.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^7.13.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.4",
    "postcss-loader": "^4.0.4",
    "prettier": "^2.3.1",
    "sass": "^1.27.1",
    "sass-loader": "^10.0.4",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "ts-loader": "^8.0.7",
    "typescript": "^4.0.5",
    "webpack": "^5.3.1",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "ress": "^3.0.0"
  }
}
